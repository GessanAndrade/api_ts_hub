{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts", "*.ts"],
  "exclude": ["node_modules"],
  "buildOnSave": true,
  "compileOnSave": true
}
